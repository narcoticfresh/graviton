<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="graviton.validation.controller.validation.class">Graviton\ValidationBundle\Controller\ValidationController</parameter>
        <parameter key="graviton.validation.service.documentinputvalidator.class">Graviton\ValidationBundle\Service\DocumentInputValidator</parameter>
        <parameter key="graviton.validation.frontmatter.class">Webuni\FrontMatter\FrontMatter</parameter>
    </parameters>
    <services>
        <service id="graviton.validation.controller.validation" class="%graviton.validation.controller.validation.class%" parent="graviton.rest.controller">
            <argument type="service" id="graviton.validation.service.documentinputvalidator"/>
        </service>
        <service id="graviton.validation.service.documentinputvalidator" class="%graviton.validation.service.documentinputvalidator.class%">
            <argument type="service" id="graviton.rest.router"/>
            <argument type="service" id="graviton.rest.restutils"/>
            <argument type="service" id="graviton.validation.frontmatter"/>
        </service>
        <service id="graviton.validation.frontmatter" class="%graviton.validation.frontmatter.class%"/>
    </services>
</container>
